<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<strong>Reviews:</strong>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> | <input readonly="readonly" type="hidden" class="rating" data-filled="glyphicon glyphicon-star" data-empty="glyphicon glyphicon-star-empty" value="<%= review.rating %>"/></li>
  <% end %>
</ul>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %> |
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
